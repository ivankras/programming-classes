{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "c build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "include/ejercicio.h",
                "src/ejercicio.c",
                "-o",
                "ejercicio.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "c run",
            "type": "shell",
            "command": "start ejercicio.exe",
            "dependsOn": [
                "c build"
            ],
            "problemMatcher": []
        }
    ]
}